<?xml version="1.0" encoding="utf-8"?>

<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="be.benvd.mvforandroid"
	android:versionCode="1"
	android:versionName="1.0">

	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:debuggable="true" android:theme="@android:style/Theme.Light">

		<activity
			android:name=".MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".UsageActivity"
			android:label="@string/app_name"></activity>

		<activity
			android:name=".CreditActivity"
			android:label="@string/app_name"></activity>

		<activity
			android:name=".TopupsActivity"
			android:label="@string/app_name"></activity>

		<activity
			android:name=".SettingsActivity"
			android:label="@string/app_name"></activity>

		<service
			android:name=".data.MVDataService">
		</service>

		<receiver
			android:name=".data.OnAlarmReceiver">
		</receiver>

	</application>

	<uses-sdk
		android:minSdkVersion="3"
		android:targetSdkVersion="8" />

	<uses-permission
		android:name="android.permission.INTERNET"></uses-permission>

	<uses-permission
		android:name="android.permission.READ_CONTACTS"></uses-permission>

	<uses-permission
		android:name="android.permission.WAKE_LOCK" />

</manifest> 